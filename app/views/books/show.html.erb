<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= render 'books/list', user: @user, book: @book %>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@books.user) do %>
          <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <br>
          <%= @books.user.name %>
        <% end %>
      </td>
      <td><%= link_to @books.title, book_path(@books)  %></td>
      <td><%= @books.body %></td>
      <% if current_user.id == @books.user_id %>
       <td><%= link_to "Edit", edit_book_path(@books) %></td>
       <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>

